<div class = 'post-by-id'>
  <p>Post #<%= @posts.find_index(@post) +1 %> by <%= @post.user.name %></p>
  <div class = "comments-likes ">
    <p>Comments: <%= @post.comments_counter.to_i %></p>
    <p>Likes: <%= @post.likes_counter.to_i %></p>
  </div>
  <p class = 'post-by-id-post'><%= @post.text %></p>
</div>
<div>
  <ul class="<%= comments?(@post)%>">
    <% @post.comments.each do |comment| %>
      <li>
        <%= comment.user.name %>:
        <%= comment.text %>
      </li>
  <% end %>
  </ul>
</div>

<div class = "buttons">
  <button class = "two-btns">
  <%= link_to 'Back', root_path %>
  </button>
  <button class = "two-btns">
  <%= link_to "Comment", new_user_post_comment_path(user_id: @user.id, post_id: @post.id) %>
  </button>
</div>




