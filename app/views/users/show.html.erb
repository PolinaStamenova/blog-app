 <div>
  <%= image_tag @user.photo %>
    <div>
      <p><%= @user.name %></p>
      <p>Number of posts:<%= @user.posts.size %></p>
    </div>
  </div>
  <div>
    <p>Bio</p>
    <p><%= @user.bio%></p>
  </div>
    <ul>
    <% @user.recent_posts.each do |post|%>
    <li>
      <p>Post #<%= @user.posts_counter %></p>
      <p><%= post.text%></p>
      <div>
        <% if post.comments_counter == nil %>
          <p>Comments: 0</p>
        <% else %>
          <p>Comments: <%= post.comments_counter %></p>
        <% end %>
        <% if post.likes_counter == nil %>
          <p>Likes: 0</p>
        <% else %>
          <p>Likes: <%= post.likes_counter %></p>
        <% end %>
      </div>
    </li>
    <% end %>
  </ul>

